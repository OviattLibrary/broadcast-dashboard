    drupal_set_message(t('The message was not successfully added. Make sure that all required fields are completed and try again.'),'error');
  }

}

/**
 * The feed portion of the module, for communicating/replaying BD status information to other servers.
 */
function broadcast_dashboard_feed() {
  header('Access-Control-Allow-Origin: *');

  $feed_active = variable_get('broadcast_dashboard_feed_active');
  $msg_active = variable_get('broadcast_dashboard_active');
  $style_feed = variable_get('broadcast_dashboard_feed_style');

  if ($feed_active == 1) {
    // The feed is enabled

    if ($msg_active == 1) {
      // There is currently an active message

      // Set vars logic
      $active = variable_get('broadcast_dashboard_active');
      $msg_id = variable_get('broadcast_dashboard_message');
      $preset_msg = variable_get('broadcast_dashboard_message_prew');
      $custom_msg = variable_get('broadcast_dashboard_custom_message_entered');
      $msg_date = variable_get('broadcast_dashboard_date_message_posted');
      $preset_clr_class = variable_get('broadcast_dashboard_message_prew_class');
      $cust_msg_clr_class = variable_get('broadcast_dashboard_message_cust_class');

      $is_custom = NULL;

      // Set if message is custom
      $is_custom = ($msg_id == "custom_msg") ? true : false;

      // Convert message set date from String to Date
      $rss_date = strtotime($msg_date);

      // No custom, push preset message
      if (($active == 1) && (!$is_custom)) {
        $bd_msg = $preset_msg;
      } else if (($active == 1) && ($is_custom)) { // end no custom msg
        $bd_msg = $custom_msg;
      } // end custom msg

      // Add custom classes if enabled; append date to end
      if ($style_feed == 1) {
        if (!$is_custom) {
          // Not custom message; grab class from reg var
          $bd_msg = "<div class=\"" . $preset_clr_class . "\"><p>" . $bd_msg . ' (Posted on: ' . $msg_date . ')</p></div>';
        } else if ($is_custom) {
          // Custom class; grab class from custom var
          $bd_msg = "<div class=\"" . $cust_msg_clr_class . "\"><p>" . $bd_msg . ' (Posted on: ' . $msg_date . ')</p></div>';
        }
      } else {
        // No custom classes to add, still add date
        $bd_msg = $bd_msg . ' (Posted on: ' . $msg_date . ')';
      }

      header("Content-Type: application/rss+xml; charset=ISO-8859-1");
      $rssfeed = '<?xml version="1.0" encoding="ISO-8859-1"?>';
      $rssfeed .= '<rss version="2.0">';
      $rssfeed .= '<channel>';
      $rssfeed .= '<title>Broadcast Dashboard RSS Feed</title>';
      $rssfeed .= '<link>'.$_SERVER['REQUEST_URI'].'</link>';
      $rssfeed .= '<description>Status feed for Broadcast Dashboard</description>';
      $rssfeed .= '<language>en-us</language>';

      $rssfeed .= '<item>';
        $rssfeed .= '<title>Broadcast Message</title>';
        $rssfeed .= '<description>'. $bd_msg . '</description>';
        $rssfeed .= '<pubDate>' . date('r', $rss_date) . '</pubDate>';
      $rssfeed .= '</item>';
      $rssfeed .= '</channel>';
      $rssfeed .= '</rss>';

      echo $rssfeed;

    } else {
      // Feed enabled, but no active message

      $rssfeed = '<div class="feed-error">There is no current message set for broadcast.</div>';

      echo $rssfeed;

    }

  } else {
    //header("Content-Type: application/rss+xml; charset=ISO-8859-1");
    $rssfeed = '<div class="feed-error">The Broadcast Dashboard feed is disabled. Please contact your system administrator to enable it.</div>';
    echo $rssfeed;
  }

  exit();
}

