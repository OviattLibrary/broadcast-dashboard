 * Implements hook_cron().
 * This is to allow for scheduling/unscheduling of posts.
 */

function broadcast_dashboard_cron() {
  $scheduler_active = variable_get('broadcast_dashboard_scheduler_active');
  $scheduler_pub = variable_get('broadcast_dashboard_scheduler_publish_value');
  $scheduler_unpub = variable_get('broadcast_dashboard_scheduler_unpublish_value');
  $current = time();

  if ($scheduler_active == 1) {
    watchdog("broadcast_dashboard", "Cron fired for BD", array('%m' => $log_message_name, WATCHDOG_DEBUG));
    watchdog("broadcast_dashboard", variable_get('broadcast_dashboard_scheduler_active') . " is active state for scheduler", array('%m' => $log_message_name, WATCHDOG_DEBUG));

    // First check if we need to publish/activate
    if ((!empty($scheduler_pub)) && ($current >= $scheduler_pub)) {
      variable_set('broadcast_dashboard_active', 1);
      broadcast_dashboard_page_build($page);
    }

    if ((!empty($scheduler_unpub)) && ($current >= $scheduler_unpub)) {
      variable_set('broadcast_dashboard_active', 0);
