/**
 * For the updating of feed settings.
 */

function broadcast_dashboard_settings_feed($form, &$form_state) {
  $form_has_errors = FALSE;

  $current_feed_toggle = variable_get("broadcast_dashboard_feed_active");
  $new_feed_toggle = $form_state['values']['broadcast_dashboard_settings_set_feed'];

  $current_feed_style = variable_get("broadcast_dashboard_feed_style");
  $new_feed_style = $form_state['values']['broadcast_dashboard_settings_set_feed_style'];

  echo "the current feed style is: " . $current_feed_style;
  echo "\n the new feed style is: " . $new_feed_style;

  /*echo "Feed toggle was: " . $current_feed_toggle . "\n";
  echo "Feed toggled to: " . $new_feed_toggle;
  die();*/

  // Check if the toggle changed
  if ($current_feed_toggle != $new_feed_toggle) {
    // The setting changed, set new
    variable_set("broadcast_dashboard_feed_active", $new_feed_toggle);

    // Watchdog message feed update
    switch($new_feed_toggle) {
      case 0:
        watchdog("broadcast_dashboard", "RSS feed toggled off", array(WATCHDOG_INFO));
        break;
      case 1:
        watchdog("broadcast_dashboard", "RSS feed toggled on", array(WATCHDOG_INFO));
        break;
      default:
        watchdog("broadcast_dashboard", "RSS feed toggled", array(WATCHDOG_INFO));
        break;
    }
  }

  // Check if the toggle changed
  if ($current_feed_style != $new_feed_style) {
    // The setting changed, set new
    variable_set("broadcast_dashboard_feed_style", $new_feed_style);

    // Watchdog message feed update
    switch($new_feed_style) {
      case 0:
        watchdog("broadcast_dashboard", "RSS feed styling toggled off", array(WATCHDOG_INFO));
        break;
      case 1:
        watchdog("broadcast_dashboard", "RSS feed styling toggled on", array(WATCHDOG_INFO));
        break;
      default:
        watchdog("broadcast_dashboard", "RSS feed styling toggled", array(WATCHDOG_INFO));
        break;
    }
  }

  echo "\npost submit the variable is: " . variable_get('broadcast_dashboard_feed_style');

  if ($form_has_errors == FALSE) {
    drupal_set_message(t('The settings have successfully been saved.'));
  }

}

